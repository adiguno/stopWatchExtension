{
    "icon": "app_logo.png",
    "name": "stopwatch",
    "publisher": "adiguno",
    "displayName": "Stop Watch",
    "description": "",
    "version": "3.0.0",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "stopwatch.resetTimer",
                "title": "Stopwatch: reset timer"
            }
        ]
    },
    "configuration": {
        "title": "stopwatch config",
        "properties": {
            "stopwatch.statusBarClick": {
                "type": "string",
                "enum": [
                    "startTimer",
                    "stopTimer"
                ],
                "description": "asdf"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/adiguno/stopWatchExtension"
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.57.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "ts-loader": "^9.2.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    }
}
